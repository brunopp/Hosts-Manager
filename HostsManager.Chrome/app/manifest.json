{
	"name": "Hosts Manager",
	"version": "1.0.1",
	"description": "Shows a warning on websites that has its hostname mapped to an IP address specified in windows hosts file.",
	"background": {
		"scripts": [ "jquery-2.1.1.min.js", "background.js" ],
		"persistent": false
	},
	"page_action": {
		"default_icon": "img/redirect.png",
		"default_title": "Current page is redirected."
	},
	"permissions": [
		"http://*/",
		"https://*/",
		"tabs"
	],
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
  "manifest_version": 2
}
